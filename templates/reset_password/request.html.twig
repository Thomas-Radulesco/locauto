{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mt-4 col-md-6">
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        <div class="text-center">
            <h1>Mot de passe oublié</h1>
        </div>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.emailAddress) }}
            <div>
                <small>
                    Entrez votre adresse mail et nous vous enverrons un lien pour modifier votre mot de passe
                </small>
            </div>
            <div class="text-center mt-5">
                <button class="btn btn-primary">Envoyer le mail</button>
            </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
