{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
<div class="container">
    <h1>Member index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Adresse email</th>
                <th>Genre</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.login }}</td>
                <td>{{ member.lastName }}</td>
                <td>{{ member.firstName }}</td>
                <td>{{ member.emailAddress }}</td>
                <td>{{ member.gender }}</td>
                <td>{{ member.roles ? member.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}" title="detail" class="btn-detail"><i class="fas fa-search"></i></a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}" title="edit" class="btn-edit"><i class="fas fa-edit"></i></a>
                    <div class="btn-delete" title="delete">
                        <i class="fas fa-trash-alt dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('member_delete', {'id': member.id}) }}">Oui, je veux supprimer</a>
                            <a class="dropdown-item" href="#">Oups !</a>
                        </div>
                        </i>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('member/_form.html.twig') }}
</div>
{% endblock %}
