{% extends 'front/front_index.html.twig' %}

{% block title %}{{parent() }} - Édition{% endblock %}
{% block body %}
    <div class="admin-wrapper flex-direction-column p-4">
        <h1>Mes informations - édition</h1>

        {{ form_start(form) }}
        <table class="table">
            <tbody>
                <tr>
                    <th>Login</th>
                    <td>{{ form_errors(form.login) }}{{ form_widget(form.login) }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ form_errors(form.firstName) }}{{ form_widget(form.firstName) }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ form_errors(form.lastName) }}{{ form_widget(form.lastName) }}</td>
                </tr>
                <tr>
                    <th>Adresse mail</th>
                    <td>{{ form_errors(form.emailAddress) }}{{ form_widget(form.emailAddress) }}</td>
                </tr>
                <tr>
                    <th>Femme / Homme</th>
                    <td>{{ form_errors(form.gender) }}{{ form_widget(form.gender) }}</td>
                </tr>
            </tbody>
        </table>
            <div class="d-flex justify-content-between my-4">
                <a href="{{ path('front_profile_show', {'token': csrf_token('profile' ~ user.id|default(null)) }) }}" class="btn btn-primary" title="retour"><i class="fas fa-arrow-left me-2"></i>Retour</a>
                <button class="btn btn-success"><i class="fas fa-save me-2"></i>{{ button_label|default('Ajouter client') }}</button>
            </div>
        {{ form_end(form) }}

{% endblock %}
