{% extends 'front/front_index.html.twig' %}

{% block title %}{{parent() }} - Modification mot de passe{% endblock %}
{% block body %}
    <div class="admin-wrapper flex-direction-column p-4">
        <h1>Mon mot de passe - modification</h1>

        {{ form_start(form) }}
        <table class="table">
            <tbody>
                <tr>
                    <th>Mot de passe actuel</th>
                    <td>{{ form_errors(form.oldPassword) }}{{ form_widget(form.oldPassword) }}</td>
                </tr>
                <tr>
                    <th>Nouveau mot de passe</th>
                    <td>{{ form_errors(form.plainPassword.first) }}{{ form_widget(form.plainPassword.first) }}</td>
                </tr>
                <tr>
                    <th>Confirmez le mot de passe</th>
                    <td>{{ form_errors(form.plainPassword.second) }}{{ form_widget(form.plainPassword.second) }}</td>
                </tr>
            </tbody>
        </table>
            <div class="d-flex justify-content-between my-4">
                <a href="{{ path('front_profile_show', {'token': csrf_token('profile' ~ user.id|default(null)) }) }}" class="btn btn-primary" title="retour"><i class="fas fa-arrow-left me-2"></i>Retour</a>
                <button class="btn btn-success"><i class="fas fa-save me-2"></i>{{ button_label|default('Ajouter client') }}</button>
            </div>
        {{ form_end(form) }}

{% endblock %}
