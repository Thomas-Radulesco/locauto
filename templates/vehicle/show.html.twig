{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
<div class="container">
    <h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ vehicle.title }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ vehicle.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ vehicle.model }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vehicle.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ vehicle.picture }}</td>
            </tr>
            <tr>
                <th>DailyPrice</th>
                <td>{{ vehicle.dailyPrice }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ vehicle.createdAt ? vehicle.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ vehicle.updatedAt ? vehicle.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicle_index') }}" class=""><i class="fas fa-undo-alt"></i></a>

    <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}" class="btn-edit"><i class="fas fa-edit"></i></a>

    {{ include('vehicle/_delete_form.html.twig') }}
</div>
{% endblock %}
