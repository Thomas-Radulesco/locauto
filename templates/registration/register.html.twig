{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Register
{% endblock %}

{% block body %}
	<div class="container mt-4 col-md-6">

		<div class="text-center">
			{% if form_errors(registrationForm) %}
				<div class="alert alert-danger">
					{{ form_errors(registrationForm) }}
				</div>
			{% endif %}

			<h1>Register</h1>
		</div>

		{{ form_start(registrationForm) }}
            {{ form_row(registrationForm.login) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.emailAddress) }}
            {{ form_row(registrationForm.gender) }}
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword.password) }}
                {{ form_widget(registrationForm.plainPassword.password) }}

            {% if form_errors(registrationForm.plainPassword.password) %}
                <div class="invalid-feedback d-inline">
                    {{ form_errors(registrationForm.plainPassword.password) }}
                </div>
            {% endif %}
            </div>
            {{ form_row(registrationForm.plainPassword.confirm_password) }}


            {{ form_row(registrationForm.agreeTerms) }}

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
